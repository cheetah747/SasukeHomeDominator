<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appIconIv"
            android:layout_gravity="center_horizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            android:src="@color/gray"
            app:civ_circle_background_color="@color/gray" />


    <androidx.cardview.widget.CardView
            android:id="@+id/selectActivityCard"
            app:cardCornerRadius="25dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            app:cardBackgroundColor="@color/progressbar_color"
            android:layout_width="match_parent"
            android:layout_height="44dp" >

        <TextView
                android:id="@+id/selectActivityTv"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:text="@string/select_activity"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <ImageView
                android:id="@+id/rootImg"
                android:src="@mipmap/root"
                android:visibility="gone"
                android:layout_gravity="right"
                android:alpha="0.3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>