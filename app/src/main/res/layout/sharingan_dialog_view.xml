<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/appNameTv"
            android:layout_gravity="center_horizontal"
            tools:text="海康"
            android:visibility="gone"
            android:shadowColor="@color/black"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appIconIv"
            android:layout_gravity="center_horizontal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="2dp"
            android:src="@color/gray"
            app:civ_circle_background_color="@color/gray" />


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:id="@+id/selectActivityCard"
                app:cardCornerRadius="25dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="@color/progressbar_color"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="45dp">

            <TextView
                    android:id="@+id/selectActivityTv"
                    android:gravity="center"
                    android:focusableInTouchMode="false"
                    android:text="@string/select_activity"
                    android:textColor="@color/white"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            <ImageView
                    android:id="@+id/rootImg"
                    android:src="@mipmap/root"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:alpha="0.3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/withFuckBrightness"
                app:cardCornerRadius="25dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_width="45dp"
                android:layout_height="45dp" >

            <ImageView
                    android:layout_gravity="center"
                    android:tint="@color/white"
                    android:src="@drawable/ic_fuck_brightness_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>